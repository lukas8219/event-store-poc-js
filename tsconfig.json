{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./bundle",
    "rootDir": "./src",
    "lib": ["ES6"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
